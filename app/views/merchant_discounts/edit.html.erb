<h1>Edit</h1>

<%= form_with url: merchant_discount_path, method: :patch, local: true do |f| %>
  <%= f.label :discount %>
  <%= f.number_field :discount, value: @discount.discount, step: 0.5 %><br><br>
  <%= f.label :threshold %>
  <%= f.number_field :threshold, value: @discount.threshold, step: 5 %><br><br>
  <%= f.submit "Submit" %>
<% end %>
